print("The price of the house is 1M dollars.")
good_credit = True
if good_credit:
    print("You have good credit and you need to put down 10% of the price.")
else:
    print("You have bad credit and you need to put down 20% of the price.")

print()

print("The price of the house is 1M dollars.")
good_credit = False
if good_credit:
    print("You have good credit and you need to put down 10% of the price.")
else:
    print("You have bad credit and you need to put down 20% of the price.")
