def greet_user(first_name, last_name):
    print(f"Hello there, {first_name} {last_name}!")
    print("Welcome aboard!")


def calc_cost(total, shipping, discount):
    print(f"Your costs will be: {total} dollars ({shipping} dollars for shipping, {discount}% for discount)")


print("Start")
greet_user("Miroslav", "Manahilov")
calc_cost(total=50, shipping=5, discount=0.1)
greet_user("Dido", last_name="Georgiev")
print("Finish")
