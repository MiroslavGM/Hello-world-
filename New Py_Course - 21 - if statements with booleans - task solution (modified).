price = 1_000_000
print(f"The price of the house is {price} dollars.")
good_credit = True
if good_credit:
    down_payment = price * 0.1
    print(f"Your down payment will be {down_payment} dollars.")
else:
    down_payment = price * 0.2
    print(f"Your down payment will be {down_payment} dollars.")

print()

price = 1_000_000
print(f"The price of the house is {price} dollars.")
good_credit = False
if good_credit:
    down_payment = price * 0.1
    print(f"Your down payment will be {down_payment} dollars.")
else:
    down_payment = price * 0.2
    print(f"Your down payment will be {down_payment} dollars.")
